{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": ["DOM", "ES2020"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "moduleResolution": "Node",
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"],
            "@components/*": ["components/*"],
            "@assets/*": ["assets/*"]
        }
    },
    "include": ["src/**/*", "types/**/*"],
    "exclude": ["node_modules", "dist", "build"]
}